{
  "expo": {
    "name": "quranexpo2",
    "slug": "quranexpo2",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "quranexpo2",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.knath2000.quranexpo2",
      "infoPlist": {
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "VERCEL_BLOB_URL_BASE": "h2zfzwpeaxcsfu9s.public.blob.vercel-storage.com",
      "NEON_DATABASE_URL": "postgresql://quran_owner:npg_YSdwHth5Ef0r@ep-odd-term-a82e3a4w-pooler.eastus2.azure.neon.tech/quran?sslmode=require",
      "API_BASE_URL": "https://onlyquranexpo.vercel.app",
      "eas": {
        "projectId": "your-eas-project-id-if-you-use-eas-build"
      }
    }
  }
}
