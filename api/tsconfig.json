{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "allowJs": true,
    "jsx": "preserve", // Added preserve as a safe default, though likely not used in API files
    "noEmit": false,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true, // Often good for transpile-only builders
    "rootDir": "../", // Allow imports from parent directory
    "baseUrl": "../", // Resolve modules from project root
    "paths": {
      "@/api/*": ["api/*"], // Map api/ to @/api/
      "@/lib/*": ["lib/*"] // Map lib/ to @/lib/
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}