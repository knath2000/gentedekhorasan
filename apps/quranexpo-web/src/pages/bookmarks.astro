---
import BackButton from '../components/BackButton.tsx';
import Background from '../components/Background.tsx';
import BookmarkListContainer from '../components/BookmarkListContainer.tsx';
import '../styles/global.css';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
		<meta name="generator" content={Astro.generator} />
		<title>Bookmarks - Luminous Verses</title>
	</head>
	<body class="flex flex-col h-screen overflow-hidden">
		<Background />
		<main class="relative z-10 flex flex-col items-center flex-1 p-4 h-full overflow-hidden" style="padding-top: env(safe-area-inset-top, 20px); padding-bottom: env(safe-area-inset-bottom, 0px);">
			<div class="w-full max-w-md absolute inset-x-0 top-[20px] bottom-[0px] mx-auto">
				<h1 class="text-2xl font-englishBold text-textPrimary mb-6 text-center tracking-wide sm:text-3xl">
					Your Bookmarks
				</h1>
				<BookmarkListContainer client:only="preact" />
			</div>
			<div class="absolute top-[20px] left-4 z-20">
				<BackButton client:only="preact" />
			</div>
		</main>
	</body>
</html>