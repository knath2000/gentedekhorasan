---
import Background from '../components/Background.tsx';
import VerseOfTheDay from '../components/VerseOfTheDay.tsx';
import { BookmarkIcon } from '../components/icons/BookmarkIcon.tsx'; // Importar el nuevo icono
import '../styles/global.css'; // Importar estilos globales
---

<html lang="en">
	<head>
		<meta charSet="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" /> {/* Added viewport-fit=cover for edge-to-edge */}
		<meta name="generator" content={Astro.generator} />
		<title>Luminous Verses</title>
		{/* Preconnects removed as fonts are local, ensure fonts.css is correctly loading them */}
	</head>
	<body className="relative min-h-screen overflow-hidden"> {/* Removed bg-background */}
		<Background />
		{/* Adjusted padding to account for new bottom nav height (60px) and safe areas */}
		{/* Using env(safe-area-inset-bottom) for iOS safe area */}
		<main className="relative z-10 flex flex-col items-center justify-center min-h-screen p-4 overflow-hidden w-full" style="padding-bottom: env(safe-area-inset-bottom, 0px); padding-top: env(safe-area-inset-top, 20px);">
			<div className="flex flex-col items-center justify-center w-full max-w-md mx-auto">
				<h1 className="text-3xl font-englishBold text-textPrimary mb-6 text-center tracking-wide sm:text-4xl animate-sequence-1">
					Luminous Verses
				</h1>
				<div className="animate-sequence-2">
					<VerseOfTheDay client:load />
				</div>
				<div className="mt-8 flex flex-col items-center justify-center space-y-4 animate-sequence-3 w-full">
					<a href="/bookmarks"
					   className="p-3 bg-skyPurple/60 backdrop-blur-sm border border-white/10 rounded-full shadow-lg hover:bg-skyPurple/80 transition-colors duration-300 ease-in-out flex items-center justify-center w-full max-w-xs">
						<BookmarkIcon size={24} className="text-textPrimary" />
					</a>
					<a href="/surahs"
					   className="px-6 py-3 bg-primary text-white font-bold rounded-full shadow-lg hover:bg-primary-dark transition-colors duration-300 ease-in-out text-lg w-full max-w-xs text-center">
						Abrir Cor√°n
					</a>
				</div>
			</div>
		</main>
	</body>
</html>
