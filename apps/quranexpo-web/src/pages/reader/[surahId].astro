---
export const prerender = false; // ✅ Solo esta página será SSR si es necesario
import BackButton from '../../components/BackButton.tsx'; // Mantener otros componentes de src/components aquí
import Background from '../../components/Background.tsx'; // Mantener Background
import AudioClientWrapper from '../../features/reader/components/AudioClientWrapper.tsx'; // Actualizar ruta
import ClientOnlyReaderContainer from '../../features/reader/components/ReaderContainer.tsx'; // Actualizar ruta y usar el ReaderContainer principal
import '../../styles/global.css';
import '../../styles/surah.css'; // Importar estilos de la página de Surah

// This function is required for all dynamic routes in Astro when using static site generation (SSG)
export async function getStaticPaths() {
  // Generate paths for all 114 Surahs in the Quran
  return Array.from({ length: 114 }, (_, i) => ({
    params: { surahId: String(i + 1) },
  }));
}

// Get the surahId from the URL parameters
const { surahId } = Astro.params;
const numericSurahId = parseInt(surahId || '1', 10);

// Validate the surahId
const isValidSurahId = !isNaN(numericSurahId) && numericSurahId >= 1 && numericSurahId <= 114;

// Initialize pageTitle
let pageTitle = "Quran Reader";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle} - Luminous Verses</title>
	</head>
	<body class="flex flex-col h-screen overflow-hidden">
		<!-- Background with stars and gradient -->
		<Background />
		
		<!-- Main content area -->
		<main class="relative flex flex-col items-center flex-1 px-4 pt-4 h-full overflow-hidden surah-page-main">
			<div class="w-full max-w-3xl relative flex flex-col h-full">
			     {/* Botón de configuración como elemento flotante independiente */}
			     <a href="/settings"
			        class="settings-button-fixed"
			        aria-label="Settings">
			       ⚙️
			     </a>
			     
			     {/* Contenedor separado para BackButton */}
			     <div class="opacity-0 animate-fade-in animation-delay-100ms z-20 relative w-full flex justify-start items-center mb-4">
			       <BackButton client:visible />
			     </div>
			 {isValidSurahId ? (
					<div class="h-full">
						<AudioClientWrapper client:visible>
							<ClientOnlyReaderContainer surahId={numericSurahId} client:only="preact" />
						</AudioClientWrapper>
					</div>
				) : (
					<div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded mb-4 opacity-0 animate-fade-in animation-delay-100ms">
						<p>Invalid Surah ID: {surahId}. Please enter a number between 1 and 114.</p>
						<a href="/surahs" class="mt-3 inline-block bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-4 rounded text-sm">
							Go to Surah List
						</a>
					</div>
				)}
			</div>
		</main>
	</body>
</html>
