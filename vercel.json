{
  "version": 2,
  "installCommand": "pnpm install --store=node_modules/.pnpm",
  "buildCommand": "pnpm run build",
  "builds": [
    {
      "src": "apps/quran-data-api/api/v1/*.ts",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "apps/quran-data-api/api/v1/*.ts": {
      "runtime": "nodejs18.x"
    }
  }
}