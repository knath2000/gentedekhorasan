{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/tsconfig.json", "prisma/**", "lib/prisma.ts", "node_modules/.prisma/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/v2/get-metadata",
      "dest": "/api/v2/get-metadata.ts"
    },
    {
      "src": "/api/v2/get-verses",
      "dest": "/api/v2/get-verses.ts"
    },
    {
      "src": "/api/v2/get-translated-verse",
      "dest": "/api/v2/get-translated-verse.ts"
    },
    {
      "src": "/api/get-metadata",
      "dest": "/api/get-metadata.ts"
    },
    {
      "src": "/api/get-verse",
      "dest": "/api/get-verse.ts"
    },
    {
      "src": "/api/get-verses",
      "dest": "/api/get-verses.ts"
    },
    {
      "src": "/api/get-translation-verses",
      "dest": "/api/get-translation-verses.ts"
    },
    {
      "src": "/api/get-translated-verse",
      "dest": "/api/get-translated-verse.ts"
    }
  ]
}