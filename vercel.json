{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/tsconfig.json"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/get-metadata",
      "dest": "/api/get-metadata"
    },
    {
      "src": "/api/get-verse",
      "dest": "/api/get-verse"
    },
    {
      "src": "/api/get-verses",
      "dest": "/api/get-verses"
    },
    {
      "src": "/api/([^/]+)",
      "dest": "/api/$1"
    }
  ]
}